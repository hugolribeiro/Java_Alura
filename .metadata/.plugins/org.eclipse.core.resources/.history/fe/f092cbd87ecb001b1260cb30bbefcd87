
public class TestaCaracteres {
	
	public static void main(String[] args) {
		char letra = 'a';
		System.out.println(letra);
		
		// o char guarda dentro dele um número da tabela Unicode e transforma para caracter
		
		char valor = 66;
		System.out.println(valor);
		
		valor += 1;
		System.out.println(valor);
		
		valor = (char) (valor + 1);
		System.out.println(valor);
	}

}
